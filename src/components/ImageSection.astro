---
export interface Props {
  title: string;
  description?: string;
  imageUrl: string;
  imageAlt: string;
  reversed?: boolean;
  children?: any;
  bgColor?: string;
}

const { 
  title, 
  description, 
  imageUrl, 
  imageAlt, 
  reversed = false,
  bgColor = "bg-white"
} = Astro.props;
---

<section class={`py-16 ${bgColor}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${reversed ? 'lg:flex-row-reverse' : ''}`}>
      <div class={`${reversed ? 'lg:order-2' : 'lg:order-1'}`}>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">{title}</h2>
        {description && (
          <p class="text-lg text-gray-600 mb-8">{description}</p>
        )}
        <div class="space-y-6">
          <slot />
        </div>
      </div>
      <div class={`${reversed ? 'lg:order-1' : 'lg:order-2'}`}>
        <div class="relative">
          <img 
            src={imageUrl} 
            alt={imageAlt}
            class="rounded-2xl shadow-xl w-full h-96 object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-br from-blue-600/10 to-purple-600/10 rounded-2xl"></div>
        </div>
      </div>
    </div>
  </div>
</section>
