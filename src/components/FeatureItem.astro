---
export interface Props {
  title: string;
  description?: string;
  icon: string;
  iconColor?: string;
}

const { 
  title, 
  description, 
  icon,
  iconColor = "blue-600"
} = Astro.props;
---

<div class="flex space-x-4">
  <div class={`w-12 h-12 bg-${iconColor.replace('-600', '-100')} rounded-lg flex items-center justify-center flex-shrink-0`}>
    <Fragment set:html={icon} />
  </div>
  <div>
    <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
    {description && <p class="text-gray-600">{description}</p>}
  </div>
</div>
