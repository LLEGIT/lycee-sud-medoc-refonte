---
// Get current page path for active navigation highlighting
const currentPath = Astro.url.pathname;
const basePath = import.meta.env.BASE_URL || '';

// Helper function to check if a link is active
function isActive(href: string): boolean {
  // Remove base path from current path for comparison
  const normalizedCurrentPath = currentPath.replace(basePath, '') || '/';
  const normalizedHref = href.replace(basePath, '') || '/';
  
  if (normalizedHref === '/') {
    return normalizedCurrentPath === '/';
  }
  
  return normalizedCurrentPath.startsWith(normalizedHref);
}

// Navigation items
const navItems = [
  { href: `${basePath}/`, label: 'Accueil' },
  { href: `${basePath}/apropos`, label: 'À propos' },
  { href: `${basePath}/formations`, label: 'Formations' },
  { href: `${basePath}/vie-scolaire`, label: 'Vie scolaire' },
  { href: `${basePath}/orientation`, label: 'Orientation' },
  { href: `${basePath}/contact`, label: 'Contact' }
];
---

<header class="bg-white shadow-lg sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center space-x-4">
        <div class="w-12 h-12">
          <img src={`${import.meta.env.BASE_URL}/images/logo.png`} alt="Logo Lycée Sud-Médoc" class="object-contain" />
        </div>
        <div>
          <h1 class="text-xl font-bold text-gray-900">
            <a href={`${import.meta.env.BASE_URL}/`} class="hover:text-blue-600">Lycée Sud-Médoc</a>
          </h1>
          <p class="text-sm text-gray-600">La Boétie</p>
        </div>
      </div>
      
      <!-- Navigation Desktop -->
      <nav class="hidden md:flex space-x-8">
        {navItems.map(item => (
          <a 
        href={item.href} 
        class={`font-semibold relative group ${
          isActive(item.href) 
            ? 'text-black' 
            : 'text-gray-600 hover:text-black'
        }`}
          >
        {item.label}
        {isActive(item.href) ? (
          <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gray-800"></div>
        ) : (
          <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gray-800 transition-all duration-300 group-hover:w-full"></div>
        )}
          </a>
        ))}
      </nav>
      <!-- Mobile menu button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden bg-blue-600 text-white p-2 rounded-lg"
        aria-label="Ouvrir le menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="mobile-menu hidden md:hidden pb-4">
      <nav class="flex flex-col space-y-2">
        {navItems.map(item => (
          <a 
            href={item.href} 
            class={`font-medium py-2 px-4 rounded ${
              isActive(item.href)
                ? 'text-blue-600 bg-blue-50 font-semibold border-l-4 border-blue-600'
                : 'text-gray-700 hover:text-blue-600 hover:bg-gray-100'
            }`}
          >
            {item.label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
