---
import '../styles/global.css';
import Header from './Header.astro';
import Footer from './Footer.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Lycée Sud-Médoc La Boétie - Établissement d'enseignement secondaire au Taillan-Médoc" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href={`${import.meta.env.BASE_URL}/images/logo.png`} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cutive+Mono&family=Dela+Gothic+One&family=Nabla&family=Newsreader:ital,opsz,wght@0,6..72,200..800;1,6..72,200..800&family=Sixtyfour&display=swap" rel="stylesheet" />
    
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <!-- Disclaimer Banner -->
    <div class="bg-orange-100 border-b-2 border-orange-200 text-orange-800 text-center py-2 px-4">
      <p class="text-sm">
        <strong>⚠️ Site de démonstration</strong> - Ceci n'est pas le site officiel du lycée. 
        <a href="https://blogpeda.ac-bordeaux.fr/lyceesudmedoc/" target="_blank" rel="noopener" class="underline hover:text-orange-900 font-medium">
          Visitez le site officiel ici
        </a>
      </p>
    </div>
    
    <Header />
    
    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
