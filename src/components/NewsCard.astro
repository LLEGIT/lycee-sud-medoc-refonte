---
export interface Props {
  title: string;
  date: string;
  excerpt: string;
  href?: string;
  gradientFrom?: string;
  gradientTo?: string;
}

const { 
  title, 
  date, 
  excerpt, 
  href = "#",
  gradientFrom = "blue-400",
  gradientTo = "blue-600"
} = Astro.props;
---

<article class="card-hover bg-white rounded-xl shadow-md overflow-hidden">
  <div class={`h-48 bg-linear-to-br from-${gradientFrom} to-${gradientTo}`}></div>
  <div class="p-6">
    <div class="flex items-center text-sm text-gray-500 mb-3">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      {date}
    </div>
    <h3 class="text-xl font-semibold text-gray-900 mb-3">{title}</h3>
    <p class="text-gray-600 mb-4">{excerpt}</p>
    <a href={href} class="text-blue-600 font-medium hover:text-blue-700">Lire la suite â†’</a>
  </div>
</article>
